@{
    ViewData["Title"] = "Secure";
}
@model SecureViewModel


<h2>Secure</h2>

<div>
    <h4>Id Token Claims</h4>
    <ul>
        @foreach (var claim in Model.IdTokenClaims)
        {
            <li>@claim</li>
        }
    </ul>
</div>

<div style="height: 10px;"></div>
<div>
    <button id="callApiButton">Call Api</button><span style="margin-left: 10px;" id="apiCallResult"></span>
</div>
<div style="height: 10px;"></div>

<div>
    <h4>Tokens</h4>
    <ul>
        @foreach (var claim in User.Claims)
        {
            <li>@claim</li>
        }
    </ul>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script>
    $(function() {
        $("#callApiButton").click(function(){
            $.get("/Home/CallApi", function(data, status) {
                var dataObj = JSON.parse(data);
                $('#apiCallResult').html(dataObj.message);
            });
        });
    });
</script>
